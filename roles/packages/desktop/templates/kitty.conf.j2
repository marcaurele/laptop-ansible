# {{ ansible_managed }}
# https://sw.kovidgoyal.net/kitty/conf/

update_check_interval 0
enable_audio_bell     no
editor                vim
scrollback_lines      5000

font_family      Monaspace Neon
bold_font        auto
italic_font      auto
bold_italic_font auto
url_style        dotted

cursor_shape          block
cursor_blink_interval 0
shell_integration     no-cursor

copy_on_select clipboard
map shift+ctrl+v paste_from_buffer clipboard

mouse_map left click ungrabbed no_op
mouse_map ctrl+left release grabbed,ungrabbed mouse_handle_click link

background #212121
foreground #cdcdcd

color0 #212121
color1 #f92672
color2 #a6e22e
color3 #e6db74
color4 #66d9ef
color5 #9e6ffe
color6 #708387
color7 #cdcdcd
color8 #4A4A4A
color9 #f92672
color10 #a6e22e
color11 #e6db74
color12 #66d9ef
color13 #9e6ffe
color14 #708387
color15 #ffffff

