# {{ ansible_managed }}
Section "InputClass"
	Identifier "mouse"
	MatchIsPointer "true"
	MatchDriver "libinput"
	Option "NaturalScrolling" "true"
	Option "AccelSpeed" "1"
EndSection

# Logitech MX Ergo / Natural off
Section "InputClass"
	Identifier "Logitech MX Ergo"
	MatchIsPointer "true"
	MatchDriver "libinput"
	MatchProduct "Logitech MX Ergo"
	Option "NaturalScrolling" "false"
	Option "AccelSpeed" "1"
EndSection
